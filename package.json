{
  "name": "archbase-react-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate React + TypeScript + Vite com Archbase React",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:http": "vite --host 0.0.0.0 --port 4200",
    "dev:debug": "DEBUG=vite:* vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "setup": "pnpm install && pnpm run type-check",
    "start": "pnpm run dev",
    "clean": "rm -rf dist node_modules",
    "reinstall": "pnpm run clean && pnpm install"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@archbase/admin": "^3.0.7",
    "@archbase/advanced": "^3.0.7",
    "@archbase/components": "^3.0.7",
    "@archbase/core": "^3.0.7",
    "@archbase/data": "^3.0.7",
    "@archbase/layout": "^3.0.7",
    "@archbase/security": "^3.0.7",
    "@archbase/security-ui": "^3.0.7",
    "@archbase/template": "^3.0.7",
    "@archbase/tools": "^3.0.7",
    "@mantine/core": "8.3.6",
    "@mantine/dates": "8.3.6",
    "@mantine/dropzone": "8.3.6",
    "@mantine/emotion": "8.3.6",
    "@mantine/hooks": "8.3.6",
    "@mantine/modals": "8.3.6",
    "@mantine/notifications": "8.3.6",
    "@mantine/spotlight": "8.3.6",
    "@rehooks/component-size": "^1.0.3",
    "@tabler/icons-react": "^3.34.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tanstack/react-query": "^5.81.5",
    "axios": "^1.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dayjs": "1.11.10",
    "i18next": "23.7.6",
    "i18next-browser-languagedetector": "^7.2.1",
    "inversify": "6.2.0",
    "inversify-react": "^1.2.0",
    "lodash": "4.17.21",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^4.0.13",
    "react-i18next": "13.4.1",
    "react-router": "^6.28.0",
    "react-router-dom": "^6.28.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^9.0.1",
    "vite-plugin-checker": "^0.10.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.24.0",
    "@babel/plugin-transform-class-properties": "^7.24.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.2",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.5",
    "http2-proxy": "^5.0.53",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.0.0",
    "vite-plugin-copy": "^0.1.6",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^18.3.0 || ^19.0.0",
    "react-dom": "^18.3.0 || ^19.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "not edge <= 18",
    "not ie 11",
    "not op_mini all"
  ],
  "pnpm": {
    "overrides": {
      "reflect-metadata": "0.2.2"
    }
  }
}
